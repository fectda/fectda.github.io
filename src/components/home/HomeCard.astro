---
interface Props {
  href: string;
  icon: string;
  title: string;
  subtitle: string;
  class?: string;
}

const { href, icon, title, subtitle, class: className = "" } = Astro.props;
---

<a href={href} class={`corner-cut group bg-[#111] border border-white/5 p-6 w-[210px] h-[210px] flex flex-col items-center justify-center text-center hover:border-primary/50 hover:bg-[#0D0D0D]/80 hover:shadow-[0_0_30px_rgba(0,0,0,0.8)] backdrop-blur-sm transition-all duration-300 cursor-pointer ${className}`}>
    <span class="material-symbols-outlined text-4xl text-primary mb-3">{icon}</span>
    <h3 class="font-headline text-3xl text-white tracking-[0.2em]">{title}</h3>
    <p class="font-mono text-[8px] text-white/30 uppercase tracking-[0.3em] mt-4 border-t border-white/5 pt-3 w-full group-hover:text-primary/60 transition-colors">{subtitle}</p>
</a>

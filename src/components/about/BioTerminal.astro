---
interface Props {
  text: string;
}

const { text } = Astro.props;
---
<section class="w-full">
    <div class="w-full bg-[#1e1e1e] border-l-4 border-secondary p-8 md:p-12 relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-2 font-mono text-[10px] text-gray-600 bg-[#111] border-b border-l border-gray-800">
            SYS.ORIGIN.INIT
        </div>
        <div class="font-mono text-primary/40 text-xs mb-4">root@mindset:~/origin$ cat bio.txt</div>
        <p class="font-body text-gray-300 text-lg md:text-2xl leading-relaxed font-light [&_b]:text-primary [&_b]:font-medium" set:html={text}></p>
        <div class="h-4 w-2 bg-primary animate-pulse mt-4 inline-block"></div>
    </div>
</section>

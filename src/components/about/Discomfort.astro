---
interface Props {
  title: string;
  warning: string;
  body: string;
}

const { title, warning, body } = Astro.props;
---
<section class="relative w-full">
    <div class="absolute inset-0 flex items-center justify-center opacity-10 pointer-events-none">
        <span class="text-[12rem] font-headline text-white rotate-[-5deg]">ERROR</span>
    </div>
    <div class="relative z-10 border border-white/10 bg-gradient-to-br from-[#222] to-[#1a1a1a] p-10 md:p-16 text-center">
        <h3 class="text-3xl md:text-5xl font-display font-bold text-white mb-8 tracking-wide [&_b]:text-secondary [&_b]:bg-white/5 [&_b]:px-2" set:html={title}>
        </h3>
        <p class="max-w-2xl mx-auto text-gray-400 font-mono text-sm leading-relaxed [&_b]:text-gray-200 [&_b]:font-bold">
            {warning}<br/><br/>
            <span set:html={body}></span>
        </p>
    </div>
</section>

---
import LanguagePicker from "@components/LanguagePicker.astro";
import { getLocalizedPath } from "@lib/i18n";
import type { Locale } from "@lib/i18n";

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;

const isActive = (path: string) => {
  const specializedPath = getLocalizedPath(path, lang);
  return currentPath === specializedPath || (path !== '/' && currentPath.startsWith(specializedPath));
};
---

<header class="w-full bg-[#050505] border-b border-white/10 relative z-50 font-mono">
    
    <!-- Telemetry Top Bar: System Status -->
    <div class="w-full border-b border-white/5 bg-black/50 px-6 py-1 flex justify-between items-center text-[10px] tracking-widest text-white/40 uppercase font-mono">
        <div class="flex items-center gap-4">
            <span class="flex items-center gap-1">
                <span class="w-1.5 h-1.5 bg-primary animate-pulse rounded-none"></span>
                SYS.ONLINE
            </span>
            <span class="hidden sm:inline">LAT: 40.4168 N</span>
            <span class="hidden sm:inline">LON: 3.7038 W</span>
        </div>
        <div class="flex items-center gap-4">
            <span class="hidden sm:inline">MEM: 64%</span>
            <span class="hidden sm:inline">UPTIME: 420:19:02</span>
            <span class="text-primary">V.2.0.24</span>
        </div>
    </div>

    <!-- Main Navigation Bar -->
    <div class="px-6 md:px-12 py-5 flex flex-col md:flex-row items-center justify-between gap-6 md:gap-0 relative overflow-hidden group">
        
        <!-- Background Elements -->
        <div class="absolute top-0 right-0 w-[300px] h-full bg-gradient-to-l from-white/5 to-transparent pointer-events-none"></div>

        <!-- Left: Identity -->
        <a href={getLocalizedPath('/', lang)} class="flex items-center gap-3 z-10 group/identity">
            <div class="flex items-center justify-center w-8 h-8 bg-white text-black font-bold text-xs tracking-tighter group-hover/identity:bg-primary transition-colors">
                EG
            </div>
            <div class="flex flex-col">
                <h1 class="text-xl font-bold tracking-tight leading-none text-white uppercase group-hover/identity:text-primary transition-colors">
                    Eduardo<span class="text-white/40">.</span>Gonz√°lez
                </h1>
                <span class="text-[10px] text-primary tracking-[0.2em] font-medium uppercase mt-0.5">Full Stack Engineer</span>
            </div>
        </a>

        <!-- Center-Right: Navigation Array -->
        <nav class="flex items-center z-10 mt-4 md:mt-0">
            <ul class="flex flex-wrap justify-center items-center gap-y-2 text-sm font-medium tracking-wide">
                {[
                    { path: '/bits', label: 'BITS' },
                    { path: '/atoms', label: 'ATOMS' },
                    { path: '/mind', label: 'MIND' },
                    { path: '/cv', label: 'CV' },
                    { path: '/about', label: 'ABOUT' }
                ].map((item, index, array) => (
                    <li class="flex items-center group/link">
                         <a 
                            href={getLocalizedPath(item.path, lang)} 
                            class:list={[
                                "relative px-3 py-1 flex items-center gap-1 transition-colors duration-0",
                                isActive(item.path) ? "text-white bg-white/5 border border-white/10" : "text-white/60 hover:text-white"
                            ]}
                         >
                            <span class:list={["text-xs transition-colors", isActive(item.path) ? "text-primary font-bold" : "text-white/30 group-hover/link:text-primary"]}>[</span>
                                <span class:list={[isActive(item.path) ? "text-primary font-bold" : ""]}>{item.label}</span>
                            <span class:list={["text-xs transition-colors", isActive(item.path) ? "text-primary font-bold" : "text-white/30 group-hover/link:text-primary"]}>]</span>
                            
                            <!-- Hover Indicator -->
                            {!isActive(item.path) && (
                                <div class="absolute bottom-0 left-0 w-full h-[2px] bg-primary scale-x-0 group-hover/link:scale-x-100 transition-transform duration-0 origin-left"></div>
                            )}
                             <!-- Active Indicator -->
                            {isActive(item.path) && (
                                <div class="absolute bottom-[-1px] left-0 w-full h-[2px] bg-primary"></div>
                            )}
                         </a>
                         {index < array.length - 1 && (
                            <span class="text-white/10 select-none mx-1">/</span>
                         )}
                    </li>
                ))}
            </ul>
        </nav>

        <!-- Far Right: Language & Action -->
        <div class="hidden md:flex items-center gap-6 z-10">
             <LanguagePicker currentLang={lang} currentPath={currentPath} />
             
             <!-- Action Button (Visual only) -->
             <button class="flex items-center justify-center w-10 h-10 border border-white/20 bg-transparent text-white hover:bg-white hover:text-black hover:border-white transition-all duration-0">
                <span class="material-symbols-outlined text-[20px]">terminal</span>
             </button>
        </div>

    </div>
</header>

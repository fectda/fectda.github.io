---
import Brand from "./header/Brand.astro";
import Navigation from "./header/Navigation.astro";
import LanguageSwitcher from "./header/LanguageSwitcher.astro";
import Actions from "./header/Actions.astro";
import type { Locale } from "@lib/i18n";

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-obsidian/95 backdrop-blur-sm border-b-2 border-panel-border transition-colors">
    <div class="max-w-[1400px] mx-auto px-6 py-4 flex items-center justify-between relative">
        
        <!-- Brand (Always Left) -->
        <div class="flex-shrink-0 relative z-50">
            <Brand lang={lang} currentPath={currentPath} />
        </div>

        <!-- Desktop: Navigation + Actions (Right) -->
        <div class="hidden lg:flex items-center gap-8 shrink-0">
            <div class="flex items-center gap-8">
                <Navigation lang={lang} currentPath={currentPath} />
                <LanguageSwitcher lang={lang} currentPath={currentPath} />
            </div>
            <Actions />
        </div>

        <!-- Mobile: Menu Toggle (Right) -->
        <label class="font-mono text-xs tracking-widest text-primary cursor-pointer hover:text-white transition-colors py-1 px-3 border border-primary/20 lg:hidden" for="mobile-menu-checkbox">
            [ MENU ]
        </label>

    </div>
</header>

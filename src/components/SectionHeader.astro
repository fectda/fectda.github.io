---
interface Props {
  title: string;
  subtitle?: string;
  number?: string;
}

const { title, subtitle, number } = Astro.props;
---

<div class="flex items-center gap-4 mb-8 border-b border-border-dark pb-2">
  <div class="flex items-center gap-2">
    {number && <span class="text-primary font-mono text-xl">{number} //</span>}
    <h2 class="text-2xl md:text-3xl font-bold uppercase tracking-tight text-white">
      <span class="text-primary hidden sm:inline">[</span> {title} <span class="text-primary hidden sm:inline">]</span>
    </h2>
  </div>
  {subtitle && (
    <>
      <div class="h-px bg-border-dark flex-grow hidden sm:block"></div>
      <span class="text-xs font-mono text-gray-500 uppercase hidden sm:block">
        // {subtitle}
      </span>
    </>
  )}
</div>

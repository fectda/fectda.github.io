---
import { getAlternateLanguage, getAlternatePath, type Locale } from "@lib/i18n";

interface Props {
  currentLang: Locale;
  currentPath: string;
}

const { currentLang, currentPath } = Astro.props;
const otherLang = getAlternateLanguage(currentLang);
const otherPath = getAlternatePath(currentPath, currentLang);
---

<a 
  href={otherPath}
  class="text-sm font-mono hover:text-black dark:hover:text-white transition-colors border border-black/10 dark:border-white/10 px-2 py-1 rounded"
  aria-label={`Switch to ${otherLang === 'en' ? 'English' : 'EspaÃ±ol'}`}
>
  {otherLang.toUpperCase()}
</a>

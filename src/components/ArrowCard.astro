---
import type { CollectionEntry } from "astro:content";
import type { Locale } from "@lib/i18n";

type Props = {
  entry: CollectionEntry<"bits"> | CollectionEntry<"atoms"> | CollectionEntry<"mind">;
  lang?: Locale;
}

const { entry, lang = 'es' } = Astro.props;
const href = `/${lang}/${entry.collection}/${entry.slug}`;
---

<a 
  href={href} 
  class="relative group flex flex-nowrap py-4 px-5 pr-12 border border-white/10 bg-white/[0.02] hover:bg-white/5 hover:border-[#C62828]/50 transition-all duration-150"
>
  <div class="flex flex-col flex-1 truncate font-mono">
    <div class="font-semibold text-white tracking-wide">
      {entry.data.title}
    </div>
    <div class="text-sm text-white/50 mt-1">
      {entry.data.description}
    </div>
  </div>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24"
    class="absolute top-1/2 right-3 -translate-y-1/2 size-5 stroke-2 fill-none stroke-white/40 group-hover:stroke-[#C62828] transition-colors duration-150"
  >
    <line x1="5" y1="12" x2="19" y2="12" class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-150" />
    <polyline points="12 5 19 12 12 19" class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-150" />
  </svg>
</a>

---
interface Props {
  skills: string[];
  title: string;
}

const { skills, title } = Astro.props;
---

<div class="w-full max-w-[900px] mt-16 md:mt-32 mb-16 md:mb-0">
    <div class="flex items-center gap-4 mb-8">
        <div class="h-px bg-secondary flex-1"></div>
        <h3 class="text-xl md:text-2xl font-display font-bold text-white uppercase tracking-widest text-primary">{title}</h3>
        <div class="h-px bg-secondary flex-1"></div>
    </div>
    <div class="flex flex-wrap justify-center gap-4">
        {skills.map((skill) => (
            <div class="bg-[#222] border border-[#444] text-[#ccc] px-4 py-2 font-mono text-sm transition-all duration-300 cursor-default relative overflow-hidden hover:border-primary hover:text-white hover:shadow-glow hover:text-shadow-glow group">
                <div class="absolute top-0 left-0 w-1 h-full bg-[#333] transition-colors duration-300 group-hover:bg-primary"></div>
                {skill}
            </div>
        ))}
    </div>
</div>

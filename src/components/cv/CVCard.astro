---
interface Props {
  year: string;
  role: string;
  company: string;
  icon: string;
}

const { year, role, company, icon } = Astro.props;
---

<div class="bg-plate-dark border-l-2 border-secondary shadow-hard p-6 w-full md:max-w-md relative hover:translate-x-1 hover:-translate-y-1 transition-transform duration-200 z-10 flex flex-col justify-center group/card">
    <div class="flex justify-between items-start mb-2">
        <h3 class="text-3xl md:text-4xl font-display font-bold text-accent leading-none">{year}</h3>
        <span class="material-symbols-outlined text-primary group-hover/card:animate-pulse transition-all">{icon}</span>
    </div>
    <h4 class="text-xl md:text-2xl font-bold text-content-bright mb-1 uppercase tracking-wide">{role}</h4>
    <p class="font-mono text-primary text-sm mb-4 tracking-wider">@ {company}</p>
    <div class="space-y-2 text-content font-light text-sm cv-bullets">
        <slot />
    </div>
</div>

<style>
    /* Styles for slotted content (bullets) */
    .cv-bullets :global(ul) {
        list-style: none;
        padding-left: 0;
    }
    .cv-bullets :global(li) {
        position: relative;
        padding-left: 1.25rem;
        margin-bottom: 0.5rem;
    }
    .cv-bullets :global(li::before) {
        content: '';
        display: inline-block;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 5px 0 5px 8px;
        border-color: transparent transparent transparent theme('colors.accent');
        position: absolute;
        left: 0;
        top: 0.5em; /* approximate centering */
    }
</style>

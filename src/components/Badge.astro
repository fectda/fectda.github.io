---
interface Props {
  text: string;
  variant?: 'default' | 'outline' | 'primary' | 'success' | 'warning';
  class?: string;
}

const { text, variant = 'default', class: className } = Astro.props;

const variants = {
  default: "bg-surface-dark border border-border-dark text-gray-400",
  outline: "bg-transparent border border-border-dark text-gray-500",
  primary: "bg-primary/10 border border-primary/30 text-primary",
  success: "bg-green-500/10 border border-green-500/30 text-green-500",
  warning: "bg-yellow-500/10 border border-yellow-500/30 text-yellow-500",
};
---

<span class:list={[
  "inline-flex items-center px-2 py-0.5 text-xs font-mono uppercase tracking-wider",
  variants[variant],
  className
]}>
  {text}
</span>

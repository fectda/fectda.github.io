---
type Props = {
  href: string;
}

const { href } = Astro.props;
---
 
<a href={href} class="relative group w-fit flex pl-8 pr-4 py-2 flex-nowrap border border-white/10 bg-white/[0.02] hover:bg-white/5 hover:border-[#C62828]/50 font-mono text-sm text-white/60 hover:text-white transition-all duration-150">
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 24 24"
    class="absolute top-1/2 left-2 -translate-y-1/2 size-4 stroke-2 fill-none stroke-white/40 group-hover:stroke-[#C62828] transition-colors duration-150">
    <line x1="5" y1="12" x2="19" y2="12" class="translate-x-2 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-150" />
    <polyline points="12 5 5 12 12 19" class="translate-x-1 group-hover:translate-x-0 transition-transform duration-150" />
  </svg>
  <div>
    <slot/>
  </div>
</a>

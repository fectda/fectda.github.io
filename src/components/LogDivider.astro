---
interface Props {
  label: string;
}

const { label } = Astro.props;
---

<div class="transmission-divider">
    <div class="transmission-label">[ :: {label} :: ]</div>
</div>

<style>
    .transmission-divider {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        position: relative;
        margin-bottom: 3rem;
    }
    .transmission-divider::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 1px;
        background-color: #AB2A3E; 
        opacity: 0.5;
        z-index: 0;
    }
    .transmission-label {
        background-color: #1A1A1A;
        color: #AB2A3E;
        padding: 0 1.5rem;
        font-family: 'Fira Code', monospace;
        font-size: 0.875rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        z-index: 10;
    }
</style>

---
const { type = 'info' } = Astro.props;

type AlertType = 'info' | 'warning' | 'error';
type AlertStyle = { border: string; bg: string; text: string; icon: string; };

const styles: Record<string, AlertStyle> = {
    info: {
        border: 'border-[#25BCC0]',
        bg: 'bg-[#25BCC0]/10',
        text: 'text-[#25BCC0]',
        icon: 'info'
    },
    warning: {
        border: 'border-[#FFA500]',
        bg: 'bg-[#FFA500]/10',
        text: 'text-[#FFA500]',
        icon: 'warning'
    },
    error: {
        border: 'border-[#FF0000]',
        bg: 'bg-[#FF0000]/10',
        text: 'text-[#FF0000]',
        icon: 'error'
    }
};

const style = styles[type as string] || styles.info;
---

<div class={`flex gap-4 p-4 border-l-4 ${style.border} ${style.bg} my-8`}>
    <span class={`material-symbols-outlined ${style.text}`}>{style.icon}</span>
    <div class="text-gray-300 font-body text-sm leading-relaxed">
        <slot />
    </div>
</div>

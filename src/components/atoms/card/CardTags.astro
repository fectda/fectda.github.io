---
interface Props {
  stack: string[];
}

const { stack } = Astro.props;
---

<div class="card-tags">
  {stack.slice(0, 2).map((tech: string) => (
    <span class="card-tag">[ {tech.toUpperCase()} ]</span>
  ))}
</div>

<style>
  /* Stack tags */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }
  .card-tag {
    font-family: 'Fira Code', monospace;
    font-size: 0.75rem;
    color: theme('colors.content-dim');
    background: theme('colors.obsidian');
    padding: 0.25rem 0.5rem;
  }
</style>

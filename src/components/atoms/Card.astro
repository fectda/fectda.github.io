---
import { type CollectionEntry } from 'astro:content';
import { getLocalizedPath, type Locale } from '@lib/i18n';
import CardWindow from './card/CardWindow.astro';
import CardHeader from './card/CardHeader.astro';
import CardTags from './card/CardTags.astro';
import CardFooter from './card/CardFooter.astro';

interface Props {
  atom: CollectionEntry<'atoms'>;
  lang: Locale;
  index: number;
}

const { atom, lang, index } = Astro.props;
const { data, slug } = atom;
const href = getLocalizedPath(`/atoms/${slug.split('/').pop()}`, lang);

const isActive = data.status === 'done' || data.status === 'wip';
const atmCode = `ATM_${String(index).padStart(2, '0')}`;
---

<a href={href} class="blueprint-card flex flex-col h-full group cursor-pointer relative overflow-hidden">
  
  <CardWindow icon={data.icon} status={data.status} isActive={isActive} />
  
  <div class="card-body">
    <CardHeader title={data.shortTitle} atmCode={atmCode} />
    
    <CardTags stack={data.stack} />
    
    <p class="card-description">
      {data.description}
    </p>
    
    <CardFooter status={data.status} />
  </div>
</a>

<style>
  /* Card container */
  .blueprint-card {
    background-color: theme('colors.plate-dark');
    border: 1px solid theme('colors.border-dark');
    box-shadow: theme('boxShadow.hard');
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .blueprint-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 15px theme('colors.primary-dim'), theme('boxShadow.hard');
    border-color: theme('colors.primary');
    text-decoration: none;
  }

  /* Card body */
  .card-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* Description */
  .card-description {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.875rem;
    font-weight: 300;
    color: theme('colors.content-dim');
    line-height: 1.625;
    margin: 0 0 1rem 0;
    flex-grow: 1;
  }
</style>

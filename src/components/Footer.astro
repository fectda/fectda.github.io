<footer class="border-t border-border-dark bg-[#0A0A0A] mt-auto">
  <!-- Main Footer Content -->
  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col md:flex-row justify-between items-center gap-6 relative">
      
      <!-- Back to Top (positioned nicely) -->
      <div class="absolute right-6 -top-16">
        <BackToTop />
      </div>

      <!-- Left: Copyright -->
      <div class="flex items-center gap-2">
        <span class="text-primary text-lg font-bold">Â©</span>
        <span class="text-sm font-mono text-gray-500">{new Date().getFullYear()} {SITE.NAME}. ALL RIGHTS RESERVED.</span>
      </div>

      <!-- Right: Socials & Tools -->
      <div class="flex items-center gap-6">
        
        <!-- Social Icons -->
        <div class="flex items-center gap-4 text-gray-500">
            {SOCIALS.map((social) => (
                <a
                  href={social.HREF}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={social.NAME}
                  class="hover:text-primary transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d={socialIcons[social.NAME]} />
                  </svg>
                </a>
              ))}
        </div>

        <div class="h-4 w-px bg-gray-800"></div>

        <!-- Theme Controls (Kept as dummy for visual match or real functionality) -->
        <div class="flex items-center gap-2">
           <button id="system-theme-button" class="text-gray-500 hover:text-white transition-colors" title="System Theme">
             <span class="material-symbols-outlined text-sm">monitor</span>
           </button>
        </div>
      </div>
  </div>

  <!-- Decorative bottom bar from Stitch Export -->
  <div class="w-full h-1 bg-gradient-to-r from-[#0A0A0A] via-primary to-[#0A0A0A] opacity-50"></div>
</footer>

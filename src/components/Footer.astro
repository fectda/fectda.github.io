---
import FooterDots from "./footer/FooterDots.astro";
import SocialIcons from "./footer/SocialIcons.astro";
import FooterNote from "./footer/FooterNote.astro";
import type { Locale } from "@lib/i18n";

interface Props {
  lang?: Locale;
}

const { lang = 'es' } = Astro.props;
---

<footer class="w-full border-t border-[#293837] bg-obsidian py-10 mt-auto">
    <div class="max-w-[1200px] mx-auto px-6 flex flex-col items-center gap-6 text-center">
        <FooterDots />
        <SocialIcons />
        <FooterNote lang={lang} />
    </div>
</footer>

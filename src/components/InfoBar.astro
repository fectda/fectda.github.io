---
interface Props {
  items: { 
    label: string; 
    value: string; 
  }[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<div class:list={["info-bar", className]}>
  {items.map((item, i) => (
    <>
      {i > 0 && <span class="info-bar__pipe">|</span>}
      <span class="info-bar__item">:: {item.label}: {item.value}</span>
    </>
  ))}
</div>

<style>
  .info-bar {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    font-family: 'Fira Code', 'Space Grotesk', monospace;
    font-size: 0.875rem;
    color: theme('colors.primary');
    letter-spacing: 0.05em;
    border-top: 1px solid theme('colors.panel-border');
    border-bottom: 1px solid theme('colors.panel-border');
    padding: 1rem 0;
    margin-bottom: 4rem;
  }

  @media (min-width: 768px) {
    .info-bar {
      gap: 2rem;
    }
  }

  .info-bar__pipe {
    color: theme('colors.gray.600');
  }

  .info-bar__item {
    text-transform: uppercase;
  }
</style>

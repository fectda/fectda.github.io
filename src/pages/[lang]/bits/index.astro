---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";

import { t, type Locale, getLocalizedPath } from "@lib/i18n";
import { SECTION_INTROS } from "src/data/intros";

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params as { lang: Locale };

const data = (await getCollection("bits"))
  .filter(post => !post.data.draft && post.slug.startsWith(`${lang}/`))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map(post => ({ ...post, slug: post.slug.replace(`${lang}/`, '') }));
  
type Acc = {
  [year: string]: CollectionEntry<"bits">[];
}

const posts = data.reduce((acc: Acc, post) => {
    const year = post.data.date.getFullYear().toString();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  }, {});

const years = Object.keys(posts).sort((a, b) => parseInt(b) - parseInt(a));

const intro = SECTION_INTROS[lang].bits; 

// Status Badge Helper
const getStatusColor = (status: string) => {
    switch (status?.toLowerCase()) {
        case 'done': return 'text-emerald-500 border-emerald-500/30 bg-emerald-500/10';
        case 'wip': return 'text-primary border-primary/30 bg-primary/10';
        case 'poc': return 'text-yellow-500 border-yellow-500/30 bg-yellow-500/10';
        case 'archived': return 'text-gray-400 border-gray-500/30 bg-gray-500/10';
        default: return 'text-gray-400 border-gray-500/30 bg-gray-500/10';
    }
};
---

<PageLayout title={t(lang, 'bits.title')} description={t(lang, 'bits.description')} lang={lang}>
  <!-- Hero Section -->
  <section class="border-b border-border-dark bg-background-light dark:bg-background-dark py-12 md:py-20 relative overflow-hidden">
     <!-- Decorative background element -->
    <div class="absolute -right-10 -top-10 w-64 h-64 bg-primary/5 full blur-none pointer-events-none"></div>

    <div class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-6 relative z-10">
            <div class="flex flex-col gap-2 border-l border-neutral-800 pl-6 py-2">
                <h1 class="text-7xl md:text-9xl font-bold tracking-tighter text-white leading-none uppercase">BITS</h1>
                <p class="text-xl text-neutral-500 font-mono tracking-widest uppercase">
                    // SOFTWARE_ARCHIVE_V.2025
                </p>
            </div>

            <!-- Industrial Data Plate -->
            <div class="border border-neutral-800 bg-[#0A0A0A] p-6 max-w-xl">
                 <div class="flex justify-between items-center border-b border-neutral-800 pb-2 mb-4">
                    <span class="text-xs font-mono text-neutral-500 uppercase tracking-widest">SECTOR: SOFTWARE</span>
                    <span class="text-xs font-mono text-primary uppercase">STATUS: ACTIVE</span>
                 </div>
                 <p class="text-gray-400 font-mono text-sm leading-relaxed uppercase">
                    {intro}
                 </p>
                 <div class="mt-4 flex gap-4 text-[10px] font-mono text-neutral-600">
                    <span>ID: BITS-001</span>
                    <span>LOC: /ROOT</span>
                 </div>
            </div>
        </div>
    </div>
  </section>

  <div class="w-full max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-16 space-y-20">
      {years.map(year => (
        <section class="animate">
           <div class="flex items-center gap-4 mb-8">
                <h2 class="text-2xl font-bold font-mono text-white">// {year}_DEPLOYMENTS</h2>
                <div class="h-px bg-white/10 flex-grow"></div>
                <span class="text-xs font-mono text-gray-500">[ACTIVE_CYCLE]</span>
            </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {posts[year].map((post) => (
               <article class="group relative flex flex-col h-full bg-[#111] border border-border-dark hover:border-primary transition-colors duration-0 p-6 gap-4">
                    <div class="absolute top-0 right-0 p-2 opacity-100 md:opacity-0 group-hover:opacity-100 transition-opacity">
                        <span class="material-symbols-outlined text-primary text-4xl">arrow_outward</span>
                    </div>
                    
                    <div class="flex justify-between items-start">
                        <span class={`font-mono text-xs border px-2 py-0.5 ${getStatusColor(post.data.status)}`}>
                            [{post.data.status?.toUpperCase() || 'WIP'}] :: v1.0.0
                        </span>
                        <span class="font-mono text-xs text-gray-500">{post.data.date.toISOString().split('T')[0]}</span>
                    </div>

                    <div class="flex-grow flex flex-col gap-2">
                        <a href={getLocalizedPath(`/bits/${post.slug}`, lang)}>
                             <h3 class="text-2xl font-bold text-white group-hover:text-primary transition-colors">{post.data.title}</h3>
                        </a>
                        <p class="text-gray-400 text-sm leading-relaxed">
                            {post.data.description}
                        </p>
                    </div>

                    <div class="pt-4 border-t border-white/5 flex flex-wrap gap-2">
                         {post.data.stack && post.data.stack.map(tech => (
                             <span class="text-xs font-mono border border-white/20 px-2 py-1 text-gray-300">{tech}</span>
                         ))}
                    </div>
               </article>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</PageLayout>

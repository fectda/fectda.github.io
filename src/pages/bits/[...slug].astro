---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("bits"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"bits">;

const post = Astro.props;
const { Content } = await post.render();

const statusLabels = {
  poc: "Proof of Concept",
  wip: "Work in Progress",
  done: "Completado"
};
---

<PageLayout title={post.data.title} description={post.data.description}>
  <Container>
    <div class="animate">
      <BackToPrev href="/bits">
        Back to bits
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
        &bull;
        <div class="font-base text-sm">
          {statusLabels[post.data.status]}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {post.data.title}
      </div>
      {post.data.stack.length > 0 && (
        <div class="animate flex flex-wrap gap-2 mt-3">
          {post.data.stack.map((tech) => (
            <span class="px-2 py-1 text-xs rounded bg-black/5 dark:bg-white/10 text-black dark:text-white">
              {tech}
            </span>
          ))}
        </div>
      )}
      {post.data.repository_url && (
        <div class="animate mt-3">
          <a 
            href={post.data.repository_url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm text-black/75 dark:text-white/75 hover:text-black dark:hover:text-white underline"
          >
            Ver repositorio â†’
          </a>
        </div>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>

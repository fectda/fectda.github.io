---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";
import type { Locale } from "@lib/i18n";

type Props = {
  title: string;
  description: string;
  lang?: Locale;
};

const { title, description, lang = 'es' } = Astro.props;
---

<!doctype html>
<html lang={lang} class="dark">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body class="bg-background-dark text-gray-300 font-display antialiased min-h-screen selection:bg-primary selection:text-white">
    <!-- Grid Background Overlay -->
    <div class="grid-overlay"></div>
    
    <!-- Main Container -->
    <div class="main-container">
      <Header lang={lang} currentPath={Astro.url.pathname} />
      <main class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
